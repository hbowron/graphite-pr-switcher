{
  "manifest_version": 3,
  "name": "Graphite PR Switcher",
  "description": "For switching between Graphite and Github pull requests.",
  "version": "0.0.1",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["tabs", "activeTab"],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "commands": {
    "toggle": {
      "suggested_key": {
        "mac": "Command+E"
      },
      "description": "Toggle between Graphite and Github PRs"
    },
    "_execute_action": {
      "suggested_key": {
        "mac": "Command+E"
      }
    }
  }
}
